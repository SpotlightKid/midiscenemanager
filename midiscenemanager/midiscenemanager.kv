<MIDISceneButton>
    size_hint: None, None
    size: dp(240), dp(120)
    pos_hint: {'center_x': 0.5, 'center_y': 0.3}
    md_bg_color: self.theme_cls.bg_light if self.state == 'normal' else C('FFD37C')

    BoxLayout:
        orientation: 'vertical'
        padding: dp(8)
        MDLabel:
            text: root.text
            theme_text_color: 'Secondary'
            font_style: "Title"
            size_hint_y: None
            height: dp(36)
        MDSeparator:
            height: dp(1)
        MDLabel:
            text: root.subtitle
            theme_text_color: 'Primary'

<TileGrid>
    size_hint_y: None
    height: self.minimum_height
    padding: dp(16), dp(16)
    spacing: dp(16)


<MIDISceneManagerScreen>:
    name: 'MidiSceneManager'

    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'MIDI Scene Manager'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'

        ScreenManager:
            id: scr_mngr
            Screen:
                MDTabbedPanel:
                    tab_display_mode:'text'
                    id: tp
