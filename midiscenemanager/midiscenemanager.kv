#:kivy 1.9
#:import C kivy.utils.get_color_from_hex

<MIDISceneButton>
    font_size: self.panel.label_size
    background_normal: 'assets/img/button_background.png'
    background_down: 'assets/img/button_background_down.png'
    background_color: C('##FF7400')
    size_hint_y: 0.15
    size_hint_x: 0.2
    text_size: self.width, None
    height: self.texture_size[1]
    padding: '10dp', '20dp'


<MIDISceneManagerScreen>:
    name: 'MidiSceneManager'
    fullscreen: True
    do_default_tab: False

    TabbedPanel:
        id: tp
